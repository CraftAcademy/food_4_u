<h1><%= @restaurant.name %></h1>
<p><%= @restaurant.description %></p>


<div id='menu-links'>
  <ul>
    <% @restaurant.menus.each do |menu| %>
      <%= link_to menu.name, "#menu-#{menu.id}", class: 'scroll' %>
    <% end %>
  </ul>
</div>

<div id='menus'>
  <%= render @restaurant.menus %>
</div>

<div id='reviews'>
  <%= render @restaurant.reviews %>
</div>
<p><strong>Write your review about the restaurant</strong></p>
<%= form_for [@restaurant, @restaurant.reviews.new] do |f| %>
  <div class='form-group'>
    <%= f.text_area :body, class: 'form_control', placeholder: 'Review' %>
  </div>
  <div class='form-group'>
    <%= f.submit "Add review", class: 'btn btn-info' %>
  </div>
<% end %>
