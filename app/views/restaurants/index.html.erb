<div class="container">
  <div class="header">
    <h1>Kitchen to Couch</h1>
    <p>Where we deliver the food straight to your couch!</p>
  </div>
  <div class="question">
    <h2>What do you feel like tonight?</h2>
  </div>
  <div class="search_form">
    <div id="map"></div>
<script type="text/javascript">
  var restaurants = <%= raw @restaurants.to_json %>
</script>
    <%= form_tag root_path, method: :get do %>
        <%= text_field_tag :search, nil, placeholder: 'eg. Thai, American, Italian, Chinese' %>
        <%= submit_tag 'Search', class: 'search-btn' %>
    <% end %>
  </div>
  <div>
    <% if @results %>
        <div class='restaurants'>
          <h2><%= "Results for #{@assortment}" if @results.any? %></h2>
          <ul>
            <% @results.each do |restaurant| %>
                <%= link_to restaurant.name, restaurant %>
            <% end %>
          </ul>
        </div>
    <% end %>
  </div>
</div>
<script>initiateMap()</script>
