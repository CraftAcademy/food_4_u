<h1>Welcome to our site!</h1>

<% @menus.each do |menu| %>
  <%= link_to menu.name, "##{menu.name}", class: 'scroll' %>
<% end %>

<h2>What do you feel like tonight?</h2>
<input type='string' placeholder='eg. Thai, Italian, Burger'/>
<input type='submit' value='Search' class='search-btn' />

<div class='restaurants'>
  <h2>Restaurants:</h2>
    <ul>
      <%= link_to 'ThaiTanic', '#' %><br />
      <%= link_to 'Fu King Chinese', '#' %>
    </ul>
</div>

<div id='menus'>
  <%= render @menus %>
</div>
